{
  "extends": "airbnb",
  "rules": {
    "indent": ["warn", 4],
    "camelcase": ["off"],
    "no-console": ["off"],
    "no-mixed-operators": ["off"],
    "no-bitwise": ["warn"],
    "space-infix-ops": ["warn"],
    "comma-dangle": ["warn", "never"],
    "react/no-find-dom-node": ["warn"],
    "react/jsx-indent": ["off"],
    "react/jsx-indent-props": ["off"]
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}